<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText"
    android:background="#FFEB00">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@id/point1"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />


    <TextView
        android:id="@+id/point1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@id/point2"

        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edge"
        android:gravity="center|left"
        android:text=" 카카오계정(이메일 또는 전화번호)" />


    <TextView
        android:id="@+id/point2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@id/point3"
        android:layout_centerInParent="true"
        android:background="@drawable/edge"
        android:gravity="center|left"
        android:text=" 비밀번호" />

    <TextView
        android:id="@+id/point3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edge2"
        android:color="#7DDA3F"
        android:text="로그인"
        android:gravity="center"/>

    <TextView
        android:id="@+id/point4"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/point3"
        android:layout_centerInParent="true"
        android:text="-----------------------------------또는---------------------------"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/point5"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/point4"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edge"
        android:text=" QR코드 로그인"
        android:gravity="center|left"/>

    <TextView
        android:id="@+id/point6"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="자동로그인"
        android:layout_centerInParent="true"
        android:layout_below="@id/point5"
        />

    <TextView
        android:id="@+id/point7"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="카카오계정찾기 | 비밀번호 재설정"
        android:gravity="center" />


</RelativeLayout>